# User Rules Environment Template
# Mirror of Cursor settings user_rules

# user_rule format
USER_RULE_FORMAT_ENABLED=true
# 1 use of name and short description
# 2 subpoints longer but still succinct  
# 3 for requirements, testcase, documentation

# user_rule prod_mgr
USER_RULE_PROD_MGR_ENABLED=true
# 1 alongside code, maintain requirement, testcase, status, documentation, crossreference, index files

# user_rule name
USER_RULE_NAME_ENABLED=true
# 1 name every file, directory, method, requirement, testcase, repository, commit, branch, etc
# 2 use snake_case, made up of terms
# 3 first term is root concept
# 4 term sequence is: root main (sub) attribute (verb)
# 5 make terms singular, not plural
# 6 use existing term if same concept
# 7 favor adding new sub term before root
# 8 index sort groups related names
# 9 maintain file with sorted index of all used names

# user_rule prompt
USER_RULE_PROMPT_ENABLED=true
# 1 chat first line is '========== prompt_name tags ============'
# 2 prompt_name is descriptor of prompt plus tags
# 3 make full response nested short bullet points, and items
# 4 respond with confirmation of audit of each user_rule

# user_rule dir
USER_RULE_DIR_ENABLED=true
# 1 keep directory simple and minimal
